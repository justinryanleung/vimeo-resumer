{
  "name": "Vimeo Resumer",
  "description": "Automatically resume Vimeo videos from where you last left off.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://vimeo.com/*"],
      "js": ["vimeo-resumer.js"]
    }
  ]
}